{
  "name": "jira_cli_mcp",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "rm -rf dist && bun build --target=bun --outdir=dist --sourcemap src/index.ts",
    "build:tsc": "rm -rf dist && tsc -p tsconfig.build.json",
    "test": "bun test tests/",
    "test:integration": "INTEGRATION_TEST=true bun test tests/integration/",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "ci": "bun run check && bun run typecheck && bun test && bun run build",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.29",
    "lefthook": "^1.11.13"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.25.49"
  }
}
